{
  "compilerOptions": {
    "lib": ["dom", "es5", "es6"],
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./build",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}